generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  output          = "../generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
  schemas  = ["app_service"] // Define the schema name here for multi-schema support
}

enum UserRole {
  WORKER
  EMPLOYER
  ADMIN

  @@schema("app_service")
}

enum OnboardingStage {
  WALLET_PENDING
  KYC_PENDING
  VC_PENDING
  COMPLETED

  @@schema("app_service")
}

// App level account - session ownership
model User {
  id              Int             @id @default(autoincrement())
  email           String          @unique
  passwordHash    String
  role            UserRole        @default(WORKER)
  onboardingStage OnboardingStage @default(WALLET_PENDING)
  createdAt       DateTime        @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime        @updatedAt @db.Timestamptz(6)

  wallets   Wallet[] // One to many
  auditLogs AuditLog[] // One to many

  @@map("users")
  @@schema("app_service")
}

model Wallet {
  id      Int    @id @default(autoincrement())
  userId  Int // Many to one
  address String @unique
  did     String @unique

  encryptedSignerKey String // base64 ciphertext
  signerKeyIv        String // base64 IV

  status           WalletStatus @default(ACTIVE)
  suspensionReason String?
  createdAt        DateTime     @default(now()) @db.Timestamptz(6)

  user       User        @relation(fields: [userId], references: [id])
  vcMetadata VCMetadata?

  @@map("wallets")
  @@schema("app_service")
}

enum WalletStatus {
  ACTIVE
  SUSPENDED
  REVOKED

  @@schema("app_service")
}

// Indicates whether a wallet is KYC verified (or expired), handled with time-bound verification and revocation handling
model VCMetadata {
  id        Int      @id @default(autoincrement())
  walletId  Int      @unique // Many to one
  vcHash    String
  issuedAt  DateTime @db.Timestamptz(6)
  expiresAt DateTime @db.Timestamptz(6)
  issuerDid String
  status    VCStatus @default(VALID)

  wallet Wallet @relation(fields: [walletId], references: [id])

  @@map("vc_metadata")
  @@schema("app_service")
}

enum VCStatus {
  VALID
  EXPIRED
  REVOKED

  @@schema("app_service")
}

model Job {
  id           Int     @id @default(autoincrement()) // Database ID
  employerId   Int
  workerWallet String?
  title        String
  description  String
  amount       Decimal

  fundedTxHash String?
  fundedAt     DateTime?

  acceptTxHash String?
  acceptedAt   DateTime?

  applyReleaseTxHash String?
  applyReleaseAt     DateTime?

  approveReleaseTxHash String?
  approveReleaseAt     DateTime?

  status           JobStatus         @default(POSTED)
  createdAt        DateTime          @default(now()) @db.Timestamptz(6)
  releaseEvidences ReleaseEvidence[]

  @@map("jobs")
  @@schema("app_service")
}

enum JobStatus {
  POSTED
  FUNDED
  IN_PROGRESS
  PENDING_APPROVAL
  COMPLETED
  DISPUTED

  @@schema("app_service")
}

model AuditLog {
  id            Int         @id @default(autoincrement())
  userId        Int?
  walletAddress String?
  action        String
  metadata      Json?
  ipAddress     String?
  result        AuditResult
  createdAt     DateTime    @default(now()) @db.Timestamptz(6)

  user User? @relation(fields: [userId], references: [id])

  @@map("audit_logs")
  @@schema("app_service")
}

enum AuditResult {
  ALLOWED
  BLOCKED

  @@schema("app_service")
}

model ReleaseEvidence {
  id    Int @id @default(autoincrement())
  jobId Int

  type    EvidenceType // TIMESHEET, DELIVERY, etc
  fileUrl String // S3 path or IPFS hash?
  notes   String?

  uploadedAt DateTime @db.Timestamptz(6)
  uploadedBy Int // userId of worker

  job Job @relation(fields: [jobId], references: [id])

  @@map("release_evidence")
  @@schema("app_service")
}

enum EvidenceType {
  TIMESHEET
  DELIVERY_PROOF
  INVOICE
  OTHER

  @@schema("app_service")
}
