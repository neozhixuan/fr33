generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum UserRole {
  WORKER
  EMPLOYER
  ADMIN
}

enum OnboardingStage {
  REGISTERED
  KYC_PENDING
  KYC_VERIFIED
  WALLET_CREATED
  VC_ISSUED
  COMPLETED
}

// App level account - session ownership
model User {
  id              Int             @id @default(autoincrement())
  email           String          @unique
  passwordHash    String
  role            UserRole        @default(WORKER)
  onboardingStage OnboardingStage @default(REGISTERED)
  createdAt       DateTime        @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime        @updatedAt @db.Timestamptz(6)

  wallets   Wallet[] // One to many
  auditLogs AuditLog[] // One to many

  @@map("users")
}

model Wallet {
  id      Int    @id @default(autoincrement())
  userId  Int // Many to one
  address String @unique
  did     String @unique

  encryptedSignerKey String // base64 ciphertext
  signerKeyIv        String // base64 IV

  status           WalletStatus @default(ACTIVE)
  suspensionReason String?
  createdAt        DateTime     @default(now()) @db.Timestamptz(6)

  user       User        @relation(fields: [userId], references: [id])
  vcMetadata VCMetadata?

  @@map("wallets")
}

enum WalletStatus {
  ACTIVE
  SUSPENDED
  REVOKED
}

// Indicates whether a wallet is KYC verified (or expired), handled with time-bound verification and revocation handling
model VCMetadata {
  id        Int      @id @default(autoincrement())
  walletId  Int      @unique // Many to one
  vcHash    String
  issuedAt  DateTime @db.Timestamptz(6)
  expiresAt DateTime @db.Timestamptz(6)
  issuerDid String
  status    VCStatus @default(VALID)

  wallet Wallet @relation(fields: [walletId], references: [id])

  @@map("vc_metadata")
}

enum VCStatus {
  VALID
  EXPIRED
  REVOKED
}

model Job {
  id            Int       @id @default(autoincrement())
  employerId    Int
  workerWallet  String?
  title         String
  description   String
  amount        Decimal
  escrowAddress String
  status        JobStatus @default(POSTED)
  createdAt     DateTime  @default(now()) @db.Timestamptz(6)

  @@map("jobs")
}

enum JobStatus {
  POSTED
  FUNDED
  IN_PROGRESS
  PENDING_APPROVAL
  COMPLETED
  DISPUTED
}

model AuditLog {
  id            Int         @id @default(autoincrement())
  userId        Int?
  walletAddress String?
  action        String
  metadata      Json?
  ipAddress     String?
  result        AuditResult
  createdAt     DateTime    @default(now()) @db.Timestamptz(6)

  user User? @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}

enum AuditResult {
  ALLOWED
  BLOCKED
}
