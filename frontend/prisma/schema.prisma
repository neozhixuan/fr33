generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model users {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  password         String
  kycVerified      Boolean   @default(false) @map("kyc_verified")
  fullName         String?   @map("full_name")
  idType           String?   @map("id_type")
  idHash           String?   @map("id_hash")
  dob              DateTime? @db.Date
  kycTimestamp     DateTime? @map("kyc_timestamp") @db.Timestamptz(6)
  walletAddress    String?   @unique @map("wallet_address")
  encryptedPrivKey String?   @map("encrypted_priv_key")
  createdAt        DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt        DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)
  registrationStep Int       @default(1) @map("registration_step") @db.SmallInt

  @@map("users")
}
